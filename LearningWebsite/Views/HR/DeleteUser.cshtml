@model LearningWebsite.Models.ApplicationUser

@{
    ViewData["Title"] = "Delete User";
    var assignmentCount = Model.Assignments?.Count ?? 0;
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 class="text-danger">
                <i class="fas fa-exclamation-triangle"></i> Delete User Confirmation
            </h1>
            <p class="text-muted">This action cannot be undone!</p>
        </div>
    </div>

    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading"><i class="fas fa-skull-crossbones"></i> Warning!</h4>
        <p>You are about to <strong>permanently delete</strong> this user from the system.</p>
        <hr>
        <p class="mb-0">All associated data will be removed including learning assignments.</p>
    </div>

    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">User to Delete</h5>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tr>
                    <th width="200">User ID:</th>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <th>Username:</th>
                    <td><strong>@Model.UserName</strong></td>
                </tr>
                <tr>
                    <th>Full Name:</th>
                    <td>@(Model.FullName ?? "-")</td>
                </tr>
                <tr>
                    <th>Email:</th>
                    <td>@(Model.Email ?? "-")</td>
                </tr>
                <tr>
                    <th>Role:</th>
                    <td>
                        @if (Model.Role == "Employee")
                        {
                            <span class="badge bg-primary">Employee</span>
                        }
                        else if (Model.Role == "Manager")
                        {
                            <span class="badge bg-success">Manager</span>
                        }
                        else if (Model.Role == "HR")
                        {
                            <span class="badge bg-danger">HR Admin</span>
                        }
                    </td>
                </tr>
                <tr>
                    <th>Manager:</th>
                    <td>@(Model.Manager?.UserName ?? "None")</td>
                </tr>
                <tr>
                    <th>Learning Assignments:</th>
                    <td>
                        <span class="badge bg-warning">@assignmentCount assignments</span>
                        @if (assignmentCount > 0)
                        {
                            <span class="text-danger ms-2">(will be deleted)</span>
                        }
                    </td>
                </tr>
                @if (Model.Role == "Manager" && Model.TeamMembers != null && Model.TeamMembers.Any())
                {
                    <tr>
                        <th>Team Members:</th>
                        <td>
                            <span class="badge bg-danger">@Model.TeamMembers.Count team members</span>
                            <span class="text-danger ms-2">(will be unassigned)</span>
                        </td>
                    </tr>
                }
            </table>

            <hr />

            <form method="post" asp-action="DeleteUser">
                <input type="hidden" name="id" value="@Model.Id" />
                
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="confirmDelete" required>
                    <label class="form-check-label" for="confirmDelete">
                        <strong>I understand this action is permanent and cannot be undone</strong>
                    </label>
                </div>

                <div class="d-flex justify-content-between">
                    <div>
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="fas fa-trash"></i> Yes, Delete This User
                        </button>
                        <a class="btn btn-secondary btn-lg" asp-action="ManageUsers">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                    <a class="btn btn-warning btn-lg" asp-action="EditUser" asp-route-id="@Model.Id">
                        <i class="fas fa-edit"></i> Edit Instead
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="alert alert-info mt-4" role="alert">
        <h6 class="alert-heading"><i class="fas fa-info-circle"></i> What happens when you delete this user?</h6>
        <ul class="mb-0">
            <li>User account will be permanently removed</li>
            <li>All learning assignments for this user will be deleted</li>
            @if (Model.Role == "Manager" && Model.TeamMembers != null && Model.TeamMembers.Any())
            {
                <li>Team members will be unassigned (ManagerId set to null)</li>
            }
            <li>This action cannot be reversed</li>
        </ul>
    </div>
</div>
