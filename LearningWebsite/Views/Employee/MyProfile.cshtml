@model LearningWebsite.Models.ApplicationUser

@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0"><i class="fas fa-user-circle"></i> My Profile</h4>
                        <div>
                            <a class="btn btn-warning btn-sm" asp-action="EditProfile">
                                <i class="fas fa-edit"></i> Edit Profile
                            </a>
                            <a class="btn btn-secondary btn-sm" asp-action="Index">
                                <i class="fas fa-arrow-left"></i> Back to Dashboard
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-4 text-center mb-4">
                            <div class="profile-avatar bg-primary text-white rounded-circle mx-auto d-flex align-items-center justify-content-center" 
                                 style="width: 150px; height: 150px; font-size: 4rem;">
                                <i class="fas fa-user"></i>
                            </div>
                            <h5 class="mt-3">@Model.UserName</h5>
                            <span class="badge bg-primary">@Model.Role</span>
                        </div>
                        <div class="col-md-8">
                            <h5 class="border-bottom pb-2 mb-3">Personal Information</h5>
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <td class="fw-bold" style="width: 40%;">Username:</td>
                                        <td>@Model.UserName</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Full Name:</td>
                                        <td>@(Model.FullName ?? "-")</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Email:</td>
                                        <td>@(Model.Email ?? "-")</td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">Role:</td>
                                        <td><span class="badge bg-primary">@Model.Role</span></td>
                                    </tr>
                                    @if (Model.Manager != null)
                                    {
                                        <tr>
                                            <td class="fw-bold">Manager:</td>
                                            <td>@Model.Manager.UserName (@(Model.Manager.FullName ?? "No name"))</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    @if (Model.Assignments != null && Model.Assignments.Any())
                    {
                        <hr class="my-4">
                        <h5 class="mb-3"><i class="fas fa-graduation-cap"></i> Learning Assignments (@Model.Assignments.Count)</h5>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Learning Title</th>
                                        <th>Category</th>
                                        <th>Status</th>
                                        <th>Progress</th>
                                        <th>Due Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var assignment in Model.Assignments.OrderByDescending(a => a.AssignedDate))
                                    {
                                        <tr>
                                            <td><strong>@assignment.Learning?.Title</strong></td>
                                            <td><span class="badge bg-secondary">@assignment.Learning?.Category</span></td>
                                            <td>
                                                @if (assignment.Status == "Completed")
                                                {
                                                    <span class="badge bg-success">Completed</span>
                                                }
                                                else if (assignment.Status == "InProgress")
                                                {
                                                    <span class="badge bg-warning">In Progress</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Not Started</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="progress" style="height: 20px; width: 100px;">
                                                    <div class="progress-bar bg-success" role="progressbar" 
                                                         style="width: @(assignment.ProgressPercentage ?? 0)%">
                                                        @(assignment.ProgressPercentage ?? 0)%
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@assignment.DueDate.ToString("MMM dd, yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
