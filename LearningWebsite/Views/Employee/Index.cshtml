@{
    ViewData["Title"] = "Employee Dashboard";
}

<div class="container-fluid mt-4">
    <h1>My Learning Dashboard</h1>
    <p class="text-muted">Welcome, <strong>@User.Identity?.Name</strong></p>

    <!-- Dashboard Stats -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Assigned</h5>
                    <p class="card-text display-6" id="totalAssignments">0</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Completed</h5>
                    <p class="card-text display-6" id="completedCount">0</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title">In Progress</h5>
                    <p class="card-text display-6" id="inProgressCount">0</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h5 class="card-title">Not Started</h5>
                    <p class="card-text display-6" id="notStartedCount">0</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Assignments Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">My Learning Assignments</h5>
        </div>
        <div class="card-body">
            <div id="loadingSpinner" class="text-center">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
            <table class="table table-hover" id="assignmentsTable" style="display:none;">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Status</th>
                        <th>Progress</th>
                        <th>Assigned Date</th>
                        <th>Due Date</th>
                        <th>Days Left</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="assignmentsBody">
                </tbody>
            </table>
            <div id="noDataMessage" class="alert alert-info" style="display:none;">
                No learning assignments at this time.
            </div>
        </div>
    </div>
</div>

<!-- Update Progress Modal -->
<div class="modal fade" id="updateProgressModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Learning Progress</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="assignmentTitle" class="form-label">Assignment</label>
                    <input type="text" class="form-control" id="assignmentTitle" disabled>
                </div>
                <div class="mb-3">
                    <label for="statusSelect" class="form-label">Status</label>
                    <select class="form-control" id="statusSelect">
                        <option value="NotStarted">Not Started</option>
                        <option value="InProgress">In Progress</option>
                        <option value="Completed">Completed</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="progressSlider" class="form-label">Progress: <span id="progressValue">0</span>%</label>
                    <input type="range" class="form-range" id="progressSlider" min="0" max="100" value="0">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveProgressBtn">Save Changes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let currentAssignmentId = null;
        const modal = new bootstrap.Modal(document.getElementById('updateProgressModal'));

        document.addEventListener('DOMContentLoaded', function () {
            loadDashboard();
            document.getElementById('progressSlider').addEventListener('input', function () {
                document.getElementById('progressValue').textContent = this.value;
            });
            document.getElementById('saveProgressBtn').addEventListener('click', saveProgress);
        });

        function loadDashboard() {
            fetch('/api/dashboard/employee')
                .then(response => {
                    if (!response.ok) throw new Error('Failed to load dashboard');
                    return response.json();
                })
                .then(data => {
                    displayDashboardStats(data);
                    displayAssignments(data.assignments);
                })
                .catch(error => {
                    console.error('Error:', error);
                    document.getElementById('loadingSpinner').innerHTML = '<div class="alert alert-danger">Failed to load dashboard data</div>';
                });
        }

        function displayDashboardStats(data) {
            document.getElementById('totalAssignments').textContent = data.totalAssignments;
            document.getElementById('completedCount').textContent = data.completed;
            document.getElementById('inProgressCount').textContent = data.inProgress;
            document.getElementById('notStartedCount').textContent = data.notStarted;
        }

        function displayAssignments(assignments) {
            const tbody = document.getElementById('assignmentsBody');
            const table = document.getElementById('assignmentsTable');
            const noDataMsg = document.getElementById('noDataMessage');
            const spinner = document.getElementById('loadingSpinner');

            tbody.innerHTML = '';

            if (assignments.length === 0) {
                table.style.display = 'none';
                noDataMsg.style.display = 'block';
                spinner.style.display = 'none';
            } else {
                assignments.forEach(assignment => {
                    const row = document.createElement('tr');
                    const statusBadge = getStatusBadge(assignment.status);
                    const progressBar = `<div class="progress" style="height: 20px;">
                        <div class="progress-bar" role="progressbar" style="width: ${assignment.progressPercentage || 0}%">
                            ${assignment.progressPercentage || 0}%
                        </div>
                    </div>`;

                    row.innerHTML = `
                        <td><strong>${assignment.title}</strong></td>
                        <td>${assignment.category}</td>
                        <td>${statusBadge}</td>
                        <td>${progressBar}</td>
                        <td>${new Date(assignment.assignedDate).toLocaleDateString()}</td>
                        <td>${new Date(assignment.dueDate).toLocaleDateString()}</td>
                        <td><span class="badge badge-${assignment.daysUntilDue < 0 ? 'danger' : assignment.daysUntilDue <= 7 ? 'warning' : 'info'}">${assignment.daysUntilDue}</span></td>
                        <td>
                            <a href="/Assessment/Training/${assignment.learningId}" class="btn btn-sm btn-info" title="View Training">
                                <i class="bi bi-book"></i> Training
                            </a>
                            <button class="btn btn-sm btn-primary" onclick="openUpdateModal(${assignment.id}, '${assignment.title}', '${assignment.status}', ${assignment.progressPercentage || 0})">Update</button>
                        </td>
                    `;
                    tbody.appendChild(row);
                });
                table.style.display = 'table';
                noDataMsg.style.display = 'none';
                spinner.style.display = 'none';
            }
        }

        function getStatusBadge(status) {
            const badges = {
                'Completed': '<span class="badge bg-success">Completed</span>',
                'InProgress': '<span class="badge bg-warning">In Progress</span>',
                'NotStarted': '<span class="badge bg-secondary">Not Started</span>'
            };
            return badges[status] || status;
        }

        function openUpdateModal(assignmentId, title, status, progress) {
            currentAssignmentId = assignmentId;
            document.getElementById('assignmentTitle').value = title;
            document.getElementById('statusSelect').value = status;
            document.getElementById('progressSlider').value = progress;
            document.getElementById('progressValue').textContent = progress;
            modal.show();
        }

        function saveProgress() {
            const status = document.getElementById('statusSelect').value;
            const progress = parseInt(document.getElementById('progressSlider').value);

            fetch(`/api/assignments/${currentAssignmentId}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-TOKEN': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                },
                body: JSON.stringify({
                    status: status,
                    progressPercentage: progress
                })
            })
                .then(response => {
                    if (!response.ok) throw new Error('Failed to update assignment');
                    modal.hide();
                    loadDashboard();
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Failed to update assignment');
                });
        }
    </script>
}